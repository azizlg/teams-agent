# ============================================================
# Intelligent Multilingual Meeting Agent â€” Environment Variables
# Copy this file to .env and fill in all values.
# ============================================================

# --- Environment ---
ENVIRONMENT=development          # development | staging | production
LOG_LEVEL=INFO                   # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT=text                  # text | json (json in production)

# --- Microsoft Azure Bot (free registration required for Teams) ---
MICROSOFT_APP_ID=your-azure-bot-app-id
MICROSOFT_APP_PASSWORD=your-azure-bot-app-password
MICROSOFT_APP_TENANT_ID=your-azure-ad-tenant-id

# --- Groq LLM API (free: https://console.groq.com) ---
GROQ_API_KEY=gsk_your-groq-api-key
GROQ_MODEL=llama-3.3-70b-versatile

# --- MinIO Object Storage (runs locally via Docker) ---
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=meeting-audio-chunks
MINIO_SECURE=false

# --- PostgreSQL ---
DATABASE_URL=postgresql+asyncpg://meeting_agent:changeme@postgres:5432/meeting_agent

# --- Redis ---
REDIS_URL=redis://redis:6379/0
REDIS_STREAM_NAME=audio-chunks
REDIS_CONSUMER_GROUP=whisper-workers
REDIS_MAX_RETRIES=3

# --- pyannote (free: https://huggingface.co) ---
PYANNOTE_AUTH_TOKEN=hf_your-huggingface-token

# --- Whisper ---
WHISPER_MODEL_SIZE=large-v3       # tiny | base | small | medium | large-v3
WHISPER_DEVICE=auto               # auto | cpu | cuda
WHISPER_COMPUTE_TYPE=float16      # float16 | int8 | float32
WHISPER_REALTIME_CHUNK_SECONDS=10 # seconds of audio per real-time chunk

# --- Audio Settings ---
AUDIO_SAMPLE_RATE=16000           # Hz
AUDIO_CHANNELS=1                  # mono
AUDIO_CHUNK_DURATION_SECONDS=300  # 5 minutes (for batch processing)
AUDIO_SILENCE_THRESHOLD_DB=-40    # dB level for silence detection
AUDIO_SILENCE_MIN_DURATION_MS=500 # minimum silence duration in ms

# --- ngrok (free: https://ngrok.com) ---
NGROK_AUTHTOKEN=your-ngrok-authtoken
